<% content_for :sitemap do %>
  <span class="current">Article</span>
<% end %>
<h1>Article 列表</h1>

<table class="table table-bordered table-striped table-condensed">
  <tr class="head">
    <td class="first">ID</td>
    <td>Title</td>
    <td>at</td>
    <td>lock</td>
    <td style="width:80px;"></td>
  </tr>

<% @articles.each do |article| %>
  <tr class="<%= 'deleted' if !article.deleted_at.blank? %>">
    <td class="first"><%= article.id %></td>
    <td><%= truncate(article.title,:length => 30) %></td>
    <td><%= l article.created_at,:format => :short %></td>
    <td><%= article.locked %></td>
    <td>
    <%= link_to '', edit_cpanel_article_path(article), :class => "icon small_edit" %>
    <%= link_to '', cpanel_article_path(article), 'data-confirm' => 'Are you sure?', :method => :delete, :class => "icon small_delete" %></td>
  </tr>
<% end %>
</table>
<%= will_paginate @articles %>
<br/>

<%= link_to 'New Article', new_cpanel_article_path, 'data-no-turbolink' => true %>
