<%= render('ads/ad_hf_01') %>
<div class="row">
  <div class="col-md-3">
    
    <div class="jumbotron">
      <h2>我们的网站宣言</h2>
      <p>
        游戏公会联盟的宗旨：为配合游戏公会的良性发展
      </p>
    </div>    

  </div>
  <div class="col-md-4">
    <%= notice_message %>
    <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <fieldset>
        <legend><%= t("common.login") %></legend>
        <%= f.input :login, :input_html => { :style => "width:180px;" } %>
        <%= f.input :password, :input_html => { :style => "width:180px;" } %>
        <% if devise_mapping.rememberable? -%>
        <div class="control-group checkbox optional">
          <label class="checkbox optional control-label"></label>
          <div class="controls">
            <div class="inputs-list"><label for="user_remember_me"><%= f.check_box :remember_me, :style => "width:auto;" %> <%= t("common.remember_me") %></label></div>
          </div>
        </div>
        <% end -%>
        <div class="form-actions">
          <%= f.submit t("common.login"), :class => "btn btn-primary", 'data-disable-with' => t("common.logining") %>
        </div>
      </fieldset>
    <% end %> 
  </div>
  <div class="col-md-3 col-md-offset-2">
    <%= render :partial => "devise/shared/links" %>
  </div>
</div>
<% content_for :scripts do %>
<script type="text/javascript">
  $(function(){
    $("#new_user").validate({
      rules: {
        'user[login]': {
          required: true,
          minlength: 5
        },
        'user[password]': {
          required: true,
          minlength: 6
        }
      },
      messages: {
        'user[login]': {
          required: "请输入用户名",
          minlength: "用户名不能小于5个字符"
        },
        'user[password]': {
          required: "请输入密码",
          minlength: "密码不能小于5个字符"
        }
      }
    });
  });
</script>
<% end %>