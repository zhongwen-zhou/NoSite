<div class="container">

  <div class="row">

    <div class="col-lg-12">
      <h1 class="page-header">工会联盟</h1>
      <ol class="breadcrumb">
        <li>
          <%= link_to '首页', root_path %>
        </li>
        <li class="active">工会联盟</li>
      </ol>
    </div>

  </div>
  
  <% @leagues.each do |league| %>

  <div class="row">

    <div class="col-md-2">
      <p><i class="fa fa-camera fa-4x"></i></p>
      <p><%= league.created_at.format_to_readable %></p>
    </div>
    <div class="col-md-5">
      <a href="<%= league_league_path(league) %>">
        <%= image_tag(league.logo_url) %>
      </a>
    </div>
    <div class="col-md-5">
      <h3>
        <%= link_to league.name, league_league_path(league) %>
      </h3>
      <p>
        <%= button_to '加入工会', ask_for_join_league_league_path(league), :method => :put, :remote => true, :class => 'join_league_btn btn btn-info' if current_user && current_user.can_join_league?(league) %>
      </p>
    </div>

  </div>

  <hr>
  <% end %>


  <div class="row">

    <ul class="pager">
      <li class="previous"><a href="#">&larr; Older</a></li>
      <li class="next"><a href="#">Newer &rarr;</a></li>
    </ul>

  </div>

</div><!-- /.container -->