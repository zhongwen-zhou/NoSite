<% content_for :sitemap do %><span class="current">加入社区</span><% end %>
<div class="content">
    <div class="box">
    <%= simple_form_for(@league) do |f| %>
      <%= render "shared/error_messages", :target => @league %>
      <fieldset>
        <legend><%= t("users.register_user")%></legend>
        
        <%= f.input :name %>

        <%= f.input :declaration %>
        <div class="form-actions">
          <%= f.submit "提交注册信息", :class => "btn btn-primary", 'data-disable-with' => t("common.submitting") %>
        </div>

        <p>
          <label>logo</label>
          <%= f.file_field :logo %>
            <%= f.hidden_field :logo_cache %>
        </p>
      </fieldset>
    <% end %>
  </div>
</div>
