<div class="section">
  <div class="row">
    <%= render('articles_list') %>
    <div class="col-lg-5">
        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
          <!-- Indicators -->
          <ol class="carousel-indicators">
            <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
            <li data-target="#carousel-example-generic" data-slide-to="1"></li>
            <li data-target="#carousel-example-generic" data-slide-to="2"></li>
          </ol>

          <!-- Wrapper for slides -->
          <div class="carousel-inner">
            <div class="item active">
              <img src="init_data/images/ads_1/001.png" />
            </div>
            <div class="item">
              <img src="init_data/images/ads_1/002.png" />
            </div>
            <div class="item">
              <img src="init_data/images/ads_1/003.png"/>
            </div>                                    
          </div>
        </div>
    </div>

    <div class="col-lg-3">
      <div class="panel panel-default">
        <div class="panel-heading" style="background-color: #50b0c1; color: #ffffff; font-size: 16px;">
          <div class="row">
            <h3 class="panel-title col-md-7">
              <%= link_to '社区', articles_path %>
            </h3>
            <h5 class="panel-title col-md-5">
              <%= link_to '更多', articles_path %>
            </h5>
          </div>   
        </div>  
        <div class="panel-body" style="font-size: 12px;">
          <ul style="margin: 0px; padding: 0px;">
          <% ::Bbs::Topic.where(:node_id.in => [1,3]).excellent.limit(10).each_with_index do |topic, index| %>
            <%#= render('bbs/share/topic_item', :topic => topic) %>
            <% color = case index
                        when 0 
                          '#d69a45'
                        when 1 
                          '#fffdb3'
                        when 2 
                          '#d69a45'
                        when 3 
                          '#fffdb3'
                        when 4 
                          '#a8cfe6'
                        when 5 
                          '#d9e8f1'
                        when 6 
                          '#a8cfe6'
                        when 7 
                          '#d9e8f1'
                        when 8 
                          '#a8cfe6'
                        when 9 
                          '#d9e8f1'
                      end
            %>
              <li style="background-color: <%= color %>">
                [<%= link_to topic.node_name, bbs_node_topics_path(topic.node_id), :target => '_blank' %>]
                <%= link_to topic.title, bbs_topic_path(topic), :target => '_blank' %>
              </li>

          <% end %>
          </ul>
        </div>
      </div> 
    </div>

  </div><!-- /.row -->
</div><!-- /.section -->
