<div class="section top-a-container">
  <div class="">
    <div class="articles-list">
      <%= render('articles_list') %>
    </div>
    <!-- <div class="col-lg-5"> -->
    <div class="topads-list" style="width: 490px; float: left; margin-left: 13.5px;">
      <!-- <div class=""> -->
      <div class="">
        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
          <!-- Indicators -->
          <ol class="carousel-indicators">
            <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
            <li data-target="#carousel-example-generic" data-slide-to="1"></li>
            <li data-target="#carousel-example-generic" data-slide-to="2"></li>
          </ol>

          <!-- Wrapper for slides -->
          <div class="carousel-inner">
            <div class="item active">
              <img src="init_data/images/ads_1/tu_0.png" />
            </div>
            <div class="item">
              <img src="init_data/images/ads_1/tu_0.png" />
            </div>
            <div class="item">
              <img src="init_data/images/ads_1/tu_0.png"/>
            </div>                                    
          </div>
        </div>
      </div>
    </div>

    <!-- <div class="col-lg-3"> -->
    <div class="topbbs-list" style="">
      <div class="panel panel-orange">
        <div class="panel-heading" style="">
          <div class="row">
            <div class="" style="float: left;">
              <h3 class="panel-title" style="color: #fff; font-size: 10px;">
                <%= link_to '社区', bbs_node_topics_path('1'), :target => '_blank' %>
              </h3>
            </div>
            <div class="" style="float: right;">
              <h4 class="panel-title" style="color: #fff; font-size: 8px;">
                <%= link_to '更多', bbs_node_topics_path('1'), :target => '_blank' %>
              </h4>
            </div>
          </div>


        </div>  
        <div class="panel-body" style="font-size: 12px;">
          <ul style="margin: 0px; padding: 0px;">
          <% ::Bbs::Topic.where(:node_id.in => [1,3]).excellent.desc(:created_at).limit(12).each_with_index do |topic, index| %>
              <li class="item <%= (index % 2) == 1 ? 'item_ji' : 'item_ou' %>">
                [<%= link_to topic.node_name, bbs_node_topics_path(topic.node_id), :target => '_blank' %>]
                <%= link_to topic.title[0..8], bbs_topic_path(topic), :target => '_blank' %>
              </li>

          <% end %>
          </ul>
        </div>
      </div> 
    </div>

  </div><!-- /.row -->
</div><!-- /.section -->
