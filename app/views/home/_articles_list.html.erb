<div class="panel panel-orange">
  <div class="panel-heading" >
    <div class="container">
      <div class="row">
        <div class="" style="float: left;">
          <% if false %>
          <h3 class="panel-title" style="color: #fff; font-size: 10px;">
            <%= link_to '业界资讯', articles_path %>
          </h3>
          <% end %>
          <a href="<%= articles_path %>">
          <%= image_tag '/init_data/images/panels/yjzx.png'%>
          </a>
        </div>
        <div class="" style="float: right;">
          <% if false %>
          <h4 class="panel-title" style="color: #fff; font-size: 8px;">
            <%= link_to '更多', articles_path %>
          </h4>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="panel-body">
      <%= image_tag('/init_data/images/articles/tu_22.png', :width => 223, :height => 120) %>
      <% if false %>
      <h4>
        <%= link_to Article.first.title[0..12], article_path(Article.first), :style => "color: #d34600;" %>
      </h4>
      <%= image_tag('/init_data/images/articles/top_01.png', :style => "float: left;") %>
      <span style="font-size: 12px; color: #6f6f6f;">非常爱美网是韩国最高端的整形美容机构。</span>
      <% end %>
      <% @articles.each do |article| %>
        <div class="row margin_5 article-item" style="width: 200px; overflow: hidden; padding-left: 10px; margin-bottom: 0px;">
          <%= link_to article.title[0..10], article_path(article), :class => "col-md-12", :title => article.title %>
        </div>
      <% end %>
  </div>
</div>