<% if can? :create, ::Bbs::Topic %>
  <% cache(["sidebar_new_bbs_topic_box",SiteConfig.new_topic_dropdown_node_ids]) do %>
    <%
      if !SiteConfig.new_topic_dropdown_node_ids.blank?
        ids = SiteConfig.new_topic_dropdown_node_ids.split(",").collect { |id| id.to_i }
      else
        ids = []
      end
      @hot_nodes = ::Bbs::Node.where(:_id.in => ids).limit(5)
    %>
    <div class="box">
      <div class="btn-group">
        <%= link_to(t("topics.start_a_new_topic_button"), new_bbs_topic_path, :class => "btn btn-success", 'data-no-turbolink' => true )%>
      </div>
    </div>
  <% end %>  
<% end %>