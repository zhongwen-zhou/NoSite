          <div class="well">
            <h4>Leave a Comment:</h4>
            <form role="form">
              <div class="form-group">
                <textarea class="form-control" rows="3"></textarea>
              </div>
              <button type="submit" class="btn btn-primary">Submit</button>
            </form>
          </div>
          
          <hr>
          <% end %>

        </div>
        
        <div class="col-lg-4">
          <div class="well">
            <h4>资讯搜索</h4>
