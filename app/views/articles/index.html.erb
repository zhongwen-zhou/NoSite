<div class="container">

  <div class="row">

    <div class="col-lg-12">
      <h1 class="page-header">业界资讯</h1>
      <ol class="breadcrumb">
        <li>
          <%= link_to '首页', root_path %>
        </li>
        <li class="active">业界资讯</li>
      </ol>
    </div>

  </div>
  
  <% @articles.each do |article| %>

  <div class="row">

    <div class="col-md-2">
      <p><i class="fa fa-camera fa-4x"></i></p>
      <p><%= article.created_at.format_to_readable %></p>
    </div>
    <div class="col-md-5">
      <a href="<%= article_path(article) %>">
        <%= image_tag(article.illustration_url) %>
      </a>
    </div>
    <div class="col-md-5">
      <h3>
        <%= link_to article.title, article_path(article) %>
      </h3>
      <p>
        <%= article.review %>
      </p>
      <%= link_to '阅读全文', article_path(article), :class => "btn btn-primary" %>
    </div>

  </div>

  <hr>
  <% end %>
