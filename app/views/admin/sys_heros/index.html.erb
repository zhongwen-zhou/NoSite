<h1><%= @sys_meta_hero.name %> 等级细节</h1>

<table class="table table-bordered table-striped table-condensed">
  <tr class="head">
    <td class="first">ID</td>
    <td>StarLevel</td>
    <td>Level</td>
    <td>Hp</td>
    <td>Mp</td>
    <td>Atk</td>
    <td>Experience</td>
    <td></td>
  </tr>

<% @sys_heros.each do |sys_hero| %>
  <tr>
    <td class="first"><%= sys_hero.id %></td>
    <td><%= sys_hero.star_level %></td>
    <td><%= sys_hero.level %></td>
    <td><%= sys_hero.hp %></td>
    <td><%= sys_hero.mp %></td>
    <td><%= sys_hero.atk %></td>
    <td><%= sys_hero.experience %></td>
    <td><%= link_to '', edit_admin_sys_meta_hero_sys_hero_path(@sys_meta_hero, sys_hero), :class => "icon small_edit" %>
    <%= link_to '', admin_sys_meta_hero_sys_hero_path(@sys_meta_hero, sys_hero), 'data-confirm' => 'Are you sure?' , :method => :delete, :class => "icon small_delete" %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to '添加英雄等级', new_admin_sys_meta_hero_sys_hero_path(@sys_meta_hero) %>
