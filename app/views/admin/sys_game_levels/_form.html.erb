<%= simple_form_for([:admin, @sys_game_level]) do |f| %>
  <%= render 'shared/error_messages', :target => @sys_game_level %>
  <fieldset>
    <legend></legend>
    <%= f.input :name %>
    <%= f.input :index %>
    <%= f.input :gold %>
    <%= f.input :experience %>
    是否是顶层关卡:
    <%= f.check_box :is_top %><br/>
    <%= f.select :parent_id, SysGameLevel.top.collect {|p| [ p.name, p.id ] }, { include_blank: true } %>
    <div class="form-actions">
      <%= f.submit %>
      <%= link_to 'Back', admin_sys_game_levels_path %>
    </div>
  </fieldset>
<% end %>
