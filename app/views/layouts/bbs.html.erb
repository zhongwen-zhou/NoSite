<!DOCTYPE html>
<html>
<head>
  <%= render_page_title %>
  <%= stylesheet_link_tag "front", "data-turbolinks-track" => true %>
  <%= yield :styles %>
  <% if mobile? %>
    <%= stylesheet_link_tag "mobile" %>
    <meta name="apple-mobile-web-app-capable" content="no">
    <meta content='True' name='HandheldFriendly' />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" />
    <link rel="apple-touch-icon-precomposed" href="<%= asset_path("ios-icon.png") %>" />
  <% end %>
  <meta name="keywords" content="<%= @meta_keywords %>" />
  <meta name="description" content="<%= @meta_description %>" />
  <meta charset='utf-8' />
  <link rel="shortcut icon" href="<%= asset_path("big_logo.png") %>" />
  <%= raw SiteConfig.custom_head_html %>
  <%= csrf_meta_tag %>
  <%#= auto_discovery_link_tag(:rss, feed_bbs_topics_url,:title => '订阅最新帖') %>
  <%= javascript_include_tag "app", "data-turbolinks-track" => true %>
  <%= yield :node_feed_link %>

<script type="text/javascript">
var _bdhmProtocol = (("https:" == document.location.protocol) ? " https://" : " http://");
document.write(unescape("%3Cscript src='" + _bdhmProtocol + "hm.baidu.com/h.js%3F72e690df0eb5b0121b2ca90417ad73b9' type='text/javascript'%3E%3C/script%3E"));
</script>


</head>
<body data-offset="50" data-controller-name="<%= controller_name %>">
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a style="float:left;" href="/" ><%= image_tag('/init_data/images/logo.png') %></a>
        <%= render_list :class => "nav" do |li|
           li << link_to(t("menu.topics"), bbs_topics_path)
        end %>
        <form action="bbs/search" class="navbar-search pull-left" method="get">
          <input type="text" name="q" class="search-query span3" value="<%= params[:q] %>" placeholder="<%= t("common.search") %>" />
        </form>
        <%= render "common/user_nav" %>
      </div>
    </div>
  </div>

  <div class="container">
    <% if !controller_name.in?(["users"]) %>
      <div class="hidden-phone" itemscope itemtype="http://data-vocabulary.org/Breadcrumb">
        <%= render_breadcrumb %>
      </div>
      <div class="feed_link hidden-phone">
        <% if not mobile? %>
          <%#= link_to(raw("<span class='icon icons_rss'></span> Feed"), feed_bbs_topics_url, :title => t("topics.subscribe_with_rss", :name => Setting.app_name), :class => "feed") %>
        <% end %>
      </div>
    <% end %>

    <%= notice_message %>
    <div id="main" class="container-fluid">
      <%= yield %>
    </div>
  </div>

  <% if not mobile? %>
  <a class="go_top" href="#"><i class="icon icons_go_top"></i></a>
  <footer class="footer">
    <div class="container">
      <%= raw SiteConfig.footer_html %>
    </div>
  </footer>
  <% end %>
  <% if mobile? %>
    <script type="text/javascript">
    app_mobile = true;
    $('body').animate({ scrollTop: -1 },0);
    </script>
  <% end %>
  <script type="text/javascript" data-turbolinks-eval=false>
    ROOT_URL = "<%= root_url %>";
    FAYE_SERVER_URL = "<%= Setting.faye_server %>";
    <% if current_user %>
      CURRENT_USER_ACCESS_TOKEN = "<%= current_user.temp_access_token %>";
    <% end %>
    // if (FAYE_SERVER_URL) {
      // App.initNotificationSubscribe();
    // }
  </script>
  <%= yield :scripts %>
