        </div> 
        <% end %>

        <div class="">
        <% pictures = GirlPicture.where(:index.in => [5,6,7]).asc(:index) %>
        <% pictures.each do |picture| %>
          <div class="portfolio-item">

            <a href="<%= picture.b_image_url %>" title="<%= picture.title %>"  data-desc="<%= picture.desc %>" data-gallery>
