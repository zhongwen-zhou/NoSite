<style type="text/css">
  .league-logo-img {
    max-width: 50px;
    max-height: 50px;
  }
</style>
<div class="panel panel-orange">
  <div class="panel-heading">
    <div class="container">
      <div class="row">
        <div class="col-md-3" style="margin-top: 2px;">
          <%= image_tag '/init_data/images/panels/xzb.png' %>
        </div>
        <div class="col-md-2 col-md-offset-7">
          <% if false %>
          <h3 class="panel-title">
            <%= link_to'更多', bbs_node_topics_path('4'), :target => '_blank' %>
          </h3>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="panel-body">
    <div class="container">

      <div class="row" style="">
        <% League::ProclaimWar.desc(:created_at).limit(6).each do |proclaimWar| %>
        <!-- <div class="col-md-6" style="margin-top: 5px;"> -->
        <div class="come-fighting padding-top-14 float-left margin-left-20">
          <p>
          <%= image_tag(proclaimWar.challenger.logo_url, :class => 'league-logo-img') %>
          &nbsp;
          <%= image_tag('/init_data/images/leagues/tiaozhan.png') %>
          &nbsp;

          <%= image_tag(proclaimWar.defender.logo_url, :class => 'league-logo-img') %>
          </p>
          <p>来打一架吧！</p>
        </div>
        <% end %>
      </div>  

    </div>
  </div>
</div>