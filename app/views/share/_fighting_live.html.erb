<div class="panel panel-orange">
  <div class="panel-heading" style="font-size: 16px;"> 
  
    <div class="">
      <%= image_tag '/init_data/images/panels/jlzk.png' %>
      <% if false %>
      <h3 class="panel-title col-md-7">
        <%= link_to '激烈战况', bbs_node_topics_path('2'), :target => '_blank' %>
        
      </h3>
      <h5 class="panel-title col-md-5">
        <%= link_to '更多', bbs_node_topics_path('2'), :target => '_blank' %>
      </h5>
      <% end %>
    </div>   
  </div>  
  <div class="panel-body" style="font-size: 12px;">
    <ul style="margin: 0px; padding: 0px; padding-left: 8px;">
    <% Bbs::Node.where(:name => '战况').first.topics.limit(7).each_with_index do |topic, index| %>
      <%#= render('bbs/share/topic_item', :topic => topic) %>
      <li class="font-14 item <%= (index % 2) == 1 ? 'item_ji' : 'item_ou' %>">
        <%= link_to topic.title[0..9], bbs_topic_path(topic), :target => '_blank' %>
      </li>
    <% end %>
    </ul>
  </div>
</div> 
