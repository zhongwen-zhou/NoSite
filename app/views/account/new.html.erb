<%= render('ads/ad_hf_01') %>

<div class="row">
  <div class="col-md-3">
    
    <div class="jumbotron">
      <h2>我们的网站宣言</h2>
      <p>
        游戏公会联盟的宗旨：为配合游戏公会的良性发展
      </p>
    </div>    

  </div>
  <div class="col-md-4">
    <%= notice_message %>
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= render "shared/error_messages", :target => resource %>
      <fieldset>
        <legend><%= t("users.register_user")%></legend>
        <%= f.input :login, :hint => t("users.suggest_using_twitter_id") %>
        <%= f.input :name %>
        <%= f.input :password %>
        <%= f.input :password_confirmation %>

        <label>推荐码</label>
        <br/>
        <input type="text" name="recommendation_code" />
        <div class="form-actions">
          <%= f.submit "提交注册信息", :class => "btn btn-primary", 'data-disable-with' => t("common.submitting") %>
        </div>
      </fieldset>
    <% end %>    

  </div>
  <div class="col-md-3 col-md-offset-2">
    <%= render :partial => "devise/shared/links" %>
  </div>
</div>

<% content_for :scripts do %>
<script type="text/javascript">
  $(function(){
    $("#new_user").validate({
      rules: {
        'user[login]': {
          required: true,
          minlength: 5
        },
        'user[password]': {
          required: true,
          minlength: 6
        },
        'user[name]': {
          required: true,
          minlength: 3
        }
      },
      messages: {
        'user[login]': {
          required: "请输入用户名",
          minlength: "用户名不能小于5个字符"
        },
        'user[password]': {
          required: "请输入密码",
          minlength: "密码不能小于5个字符"
        },
        'user[name]': {
          required: "请输入昵称",
          minlength: "密码不能小于5个字符"
        }
      }
    });
  });
</script>
<% end %>